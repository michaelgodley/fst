{
  "name": "react-template",
  "version": "1.0.0",
  "description": "React Template and Tooling",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "prestart": "echo ************ Starting ************",
    "start": "webpack-dev-server --hot --inline --config webpack.dev.js --host 0.0.0.0",
    "startdash": "webpack-dashboard -- webpack-dev-server --hot --inline --config webpack.dev.js",
    "precommit": "lint-staged",
    "pretty": "prettier --write \"src/**/*.js\"",
    "prelint": "echo ************ Linting ************",
    "lint": "eslint ./src",
    "test": "jest ./test",
    "test:coverage": "npm test -- --coverage",
    "scan:security": "nsp check",
    "scan:updates": "ncu",
    "http-server": "./node_modules/.bin/http-server ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelgodley/react-template.git"
  },
  "author": "Mike Godley <michaelgodley@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaelgodley/react-template/issues"
  },
  "homepage": "https://github.com/michaelgodley/react-template#readme",
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^7.0.0",
    "npm-check-updates": "^2.14.2",
    "nsp": "^3.2.1",
    "prettier": "^1.13.7",
    "react-test-renderer": "^16.4.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "transfer-webpack-plugin": "^0.1.4",
    "url-loader": "^1.0.1",
    "webpack": "^4.15.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dashboard": "^2.0.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/enzyme.setup.js",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {},
    "testEnvironment": "node",
    "verbose": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:security/recommended",
      "prettier",
      "prettier/react",
      "prettier/standard"
    ],
    "plugins": [
      "jest",
      "jsx-a11y",
      "react",
      "security",
      "prettier",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "node": true,
      "jest": true,
      "es6": true,
      "browser": true,
      "commonjs": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{jsx,js,json}": [
      "npm run pretty",
      "git add"
    ]
  }
}
