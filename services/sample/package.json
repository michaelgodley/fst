{
  "name": "sample",
  "version": "1.0.0",
  "description": "Boilerplate server side code",
  "main": "index.js",
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "debug": "node --inspect-brk=0.0.0.0:9229 dist/index",
    "clean": "rimraf dist",
    "build": "npm run -s clean && mkdir -p dist && babel src -s -D -d dist",
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node -r babel-register\"",
    "dev:pretty": "nodemon src/index.js --exec \"node -r babel-register\" | bunyan",
    "dev:pretty:debug": "nodemon src/index.js --exec \"node --inspect-brk=0.0.0.0:9229 -r babel-register\" | bunyan",
    "db": "npx sequelize",
    "db:migrate": "sequelize --config=src/db/sequelize/config/config.json --migrations-path=src/db/sequelize/migrations db:migrate ",
    "db:seed": "sequelize --config=src/db/sequelize/config/config.json --seeders-path=src/db/sequelize/seeders db:seed ",
    "precommit": "lint-staged",
    "pretty": "prettier --write \"src/**/*.js\"",
    "prelint": "echo ************ Linting ************",
    "lint": "eslint ./src",
    "lint:watch": "esw -w src test",
    "test": "jest -b ./src",
    "test:coverage": "npm test -- --coverage",
    "scan:security": "nsp check",
    "scan:updates": "ncu"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michselgodley/fst.git"
  },
  "keywords": [
    "Nodejs",
    "Express",
    "ES6",
    "ES7",
    "Postgres",
    "Mongo",
    "Passport",
    "JWT"
  ],
  "author": "Michael Godley <michaelgodley@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michselgodley/fst/issues"
  },
  "homepage": "https://github.com/michselgodley/fst#readme",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:security/recommended",
      "prettier",
      "prettier/react",
      "prettier/standard"
    ],
    "plugins": [
      "jest",
      "jsx-a11y",
      "react",
      "security",
      "prettier",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "node": true,
      "jest": true,
      "es6": true,
      "browser": true,
      "commonjs": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run pretty",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {},
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-express-serializer": "^1.0.0",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "dotenv-safe": "^6.0.0",
    "enforce": "^0.1.7",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-request-id": "^1.4.0",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.1.5",
    "express-validator": "^5.3.0",
    "faker": "^4.1.0",
    "helmet": "^3.13.0",
    "http-status": "^1.2.0",
    "joi": "^13.6.0",
    "joi-extension-semver": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "lusca": "^1.6.1",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "mongoose": "^5.12.2",
    "multer": "^1.3.1",
    "numeral": "^2.0.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.1",
    "sequelize-cli": "^4.1.1",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-preset-env": "latest",
    "babel-register": "latest",
    "cross-env": "latest",
    "del": "latest",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-react-app": "latest",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-security": "latest",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-watch": "^4.0.2",
    "jest": "^23.6.0",
    "jest-matcher-one-of": "^0.1.2",
    "lint-staged": "^7.2.2",
    "ndb": "^1.0.25",
    "nodemon": "^1.18.4",
    "npm-check-updates": "latest",
    "prettier": "^1.14.2",
    "rimraf": "latest",
    "supertest": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  }
}
